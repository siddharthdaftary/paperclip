<% was_validated = article.errors.any? %>

<%= form_with(model: article, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% link_class = "form-control" %>
    <% link_was_invalid = article.errors.include?(:link) %>

    <% if was_validated %>
      <% if link_was_invalid %>
        <% link_class << " is-invalid" %>
      <% else %>
        <% link_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :link %>
    <%= f.text_field :link, class: link_class, placeholder: "Enter link" %>
    <% if link_was_invalid %>
      <% article.errors.full_messages_for(:link).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% uploader_review_class = "form-control" %>
    <% uploader_review_was_invalid = article.errors.include?(:uploader_review) %>

    <% if was_validated %>
      <% if uploader_review_was_invalid %>
        <% uploader_review_class << " is-invalid" %>
      <% else %>
        <% uploader_review_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :uploader_review %>
    <%= f.text_field :uploader_review, class: uploader_review_class, placeholder: "Enter uploader review" %>
    <% if uploader_review_was_invalid %>
      <% article.errors.full_messages_for(:uploader_review).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% uploader_class = "form-control" %>
    <% uploader_was_invalid = article.errors.include?(:uploader) %>

    <% if was_validated %>
      <% if uploader_was_invalid %>
        <% uploader_class << " is-invalid" %>
      <% else %>
        <% uploader_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :uploader_id %>
    <%= f.collection_select :uploader_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if uploader_was_invalid %>
      <% article.errors.full_messages_for(:uploader).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% publication_class = "form-control" %>
    <% publication_was_invalid = article.errors.include?(:publication) %>

    <% if was_validated %>
      <% if publication_was_invalid %>
        <% publication_class << " is-invalid" %>
      <% else %>
        <% publication_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :publication %>
    <%= f.text_field :publication, class: publication_class, placeholder: "Enter publication" %>
    <% if publication_was_invalid %>
      <% article.errors.full_messages_for(:publication).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% estimated_reading_time_class = "form-control" %>
    <% estimated_reading_time_was_invalid = article.errors.include?(:estimated_reading_time) %>

    <% if was_validated %>
      <% if estimated_reading_time_was_invalid %>
        <% estimated_reading_time_class << " is-invalid" %>
      <% else %>
        <% estimated_reading_time_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :estimated_reading_time %>
    <%= f.text_field :estimated_reading_time, class: estimated_reading_time_class, placeholder: "Enter estimated reading time" %>
    <% if estimated_reading_time_was_invalid %>
      <% article.errors.full_messages_for(:estimated_reading_time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% tag_class = "form-control" %>
    <% tag_was_invalid = article.errors.include?(:tag) %>

    <% if was_validated %>
      <% if tag_was_invalid %>
        <% tag_class << " is-invalid" %>
      <% else %>
        <% tag_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :tag_id %>
    <%= f.collection_select :tag_id, Tag.all, :id, :to_s, {}, class: "form-control" %>
    <% if tag_was_invalid %>
      <% article.errors.full_messages_for(:tag).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>

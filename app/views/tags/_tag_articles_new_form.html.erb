<%= form_with(model: @article, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :link %>

    <%= f.text_field :link, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :uploader_review %>

    <%= f.text_field :uploader_review, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :uploader_id %>

    <%= f.collection_select :uploader_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :publication %>

    <%= f.text_field :publication, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :estimated_reading_time %>

    <%= f.text_field :estimated_reading_time, class: "form-control" %>
  </div>

  <%= f.hidden_field :tag_id, value: @tag.id %>

  <%= f.submit "Create article", class: "btn btn-block btn-outline-secondary" %>
<% end %>

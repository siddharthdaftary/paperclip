<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Articles

    <a data-toggle="collapse" href="#tag_articles_new_form">
      Add article
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @tag.articles.each do |article| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to article, article %>

        <%= link_to article, method: :delete, data: { confirm: "Do you really want to delete this article" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="tag_articles_new_form">
        <%= render partial: "tags/tag_articles_new_form" %>
      </div>
    </div>

  </ul>
</div>
